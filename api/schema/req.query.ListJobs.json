{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "limit": {
            "type": "integer",
            "default": 100,
            "maximum": 100,
            "description": "Limit number of returned jobs"
        },
        "run": {
            "type": "integer",
            "description": "Only show run associated with a given ID"
        },
        "status": {
            "$ref": "./util/status.json"
        },
        "order": {
            "$ref": "./util/order.json"
        },
        "page": {
            "$ref": "./util/page.json"
        },
        "sort": {
            "type": "string",
            "default": "id",
            "enum": [
                "id",
                "run",
                "map",
                "created",
                "source",
                "source_name",
                "layer",
                "name",
                "output",
                "loglink",
                "status",
                "stats",
                "count",
                "bounds",
                "version",
                "size",
                "license"
            ],
            "description": "Field to sort order by"
        },
        "live": {
            "type": "string",
            "default": "all",
            "enum": [
                "all",
                "true",
                "false"
            ]
        },
        "before": {
            "type": "string",
            "description": "Only show runs before the given date"
        },
        "after": {
            "type": "string",
            "description": "Only show runs after the given date"
        },
        "filter": {
            "type": "string",
            "description": "Filter results by source name"
        }
    }
}
